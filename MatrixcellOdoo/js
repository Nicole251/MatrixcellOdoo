// L贸gica para simular "A帽adir a Cesta"
document.addEventListener('DOMContentLoaded', () => {
    const botonesAdd = document.querySelectorAll('.add-btn');
    const carritoBtn = document.querySelector('.carrito-btn');
    let contadorCarrito = 0;

    botonesAdd.forEach(boton => {
        boton.addEventListener('click', (evento) => {
            const nombreProducto = evento.target.dataset.nombre;
            contadorCarrito++;
            carritoBtn.textContent = ` Carrito (${contadorCarrito})`;

            console.log(`Producto a帽adido: ${nombreProducto}`);
            
            // Notificaci贸n al usuario
            alert(`"${nombreProducto}" a帽adido a la cesta.`);
        });
    });
});
